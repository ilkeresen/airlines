@model Flight
@{
    ViewData["Title"] = "AirlineCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Uçuş Ekle</h1>
            <div class="card mb-4">
                <div class="card-header"><i class="fas fa-calendar-plus mr-1"></i>Uçuş Ekle</div>
                <div class="card-body">
                    <form asp-controller="Home" asp-action="AirlineCreate" method="post">
                        <div class="form-group">
                            <label asp-for="Departure">Kalkacağı Şehir</label>
                            <input class="form-control" asp-for="Departure" placeholder="Kalkacağı Şehir" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Arrival">Varacağı Şehir</label>
                            <input class="form-control" asp-for="Arrival" placeholder="Varacağı Şehir" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Price">Bilet Ücreti</label>
                            <input class="form-control" asp-for="Price" placeholder="Bilet Ücreti" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="AirlineNumber">Uçuş Numarası</label>
                            <input class="form-control" asp-for="AirlineNumber" placeholder="Uçuş Numarası" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="FlightDate">Uçuş Tarihi</label>
                            <input type="datetime-local" class="form-control" asp-for="FlightDate" placeholder="Kalkacağı Şehir" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Plane">Uçak İsmi</label>
                            <select class="form-control" asp-for="Plane" asp-items="ViewBag.PlanesName" required>
                            </select>
                        </div>
                        <button type="submit" class="btn btn-primary">Kayıt Et</button>
                    </form>
                </div>
            </div>
        </div>
    </main>
